  <body>
    <!-- Navbar -->
    <header class="header">
     <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <img src="./images/03-Secretsaucelogo.png" alt="Logo" width="250" height="24" class="d-inline-block align-text-top">
          </a>
        </div>
     </nav>

   <section>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="/">
                <button id="homebtn" class="btn btn-outline-success me-2" type="button">Home</button>
              </a>
            </li>
            {{#if loggedIn}}
            <li class="nav-item">
              <a href="/logout">
                <button id="logout" class="btn btn-outline-success me-2" type="button">Logout</button>
              </a>
            </li>
            {{else}}
            <li class="nav-item">
              <a href="/login">
                <button id="login" class="btn btn-outline-success me-2" type="button">Login</button>
              </a>
            </li>
            {{/if}}

            {{#if loggedIn}}
            <li class="nav-item">
              <a href="/saved">
                <button id="savedbtn" class="btn btn-outline-success me-2" type="button">Saved Recipes</button>
              </a>
            </li>
            {{else}}
            <section></section>
            {{/if}}

            {{#if loggedIn}}
            <li class="nav-item">
              <a href="/post">
                <button id="postbtn" class="btn btn-outline-success me-2" type="button">Post a Recipe</button>
              </a>
            </li>
            {{else}}
            <section></section>
            {{/if}}
            <li class="nav-item">
              <a href="/api/mystery-recipe">
                <button id="mysterybtn" class="btn btn-outline-success me-2" type="button">Mystery Recipes</button>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
   </section>

  <script type="text/javascript" src="./js/script.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  
